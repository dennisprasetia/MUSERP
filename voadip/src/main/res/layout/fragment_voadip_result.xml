<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="15dp"
	tools:context=".menu.work.VoadipConfirmFragment">

	<TextView
		android:id="@+id/tvHead"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@android:color/holo_green_light"
		android:gravity="center"
		android:text="No. BPB NoOp"
		android:textSize="20sp"
		android:textStyle="bold" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="10dp">

		<TableLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TableRow>
				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Mitra" />

				<TextView
					android:id="@+id/tvMitraResult"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1" />
			</TableRow>

			<TableRow>
				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="No Reg" />

				<TextView
					android:id="@+id/tvNoregResult"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1" />
			</TableRow>

			<TableRow>
				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Alamat" />

				<TextView
					android:id="@+id/tvAlamatResult"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1" />
			</TableRow>

			<TableRow>
				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="No OP" />

				<TextView
					android:id="@+id/tvNoOpResult"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1" />
			</TableRow>

			<TableRow>
				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="No SJ" />

				<TextView
					android:id="@+id/tvNoSjResult"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1" />
			</TableRow>

			<TableRow>
				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Supplier" />

				<TextView
					android:id="@+id/tvSupplierResult"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1" />
			</TableRow>

			<TableRow>
				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Tgl Terima" />

				<TextView
					android:id="@+id/tvTglTerimaResult"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1" />
			</TableRow>

			<TableRow>
				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Penerima" />

				<TextView
					android:id="@+id/tvPenerimaResult"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1" />
			</TableRow>
		</TableLayout>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="20dp"
			android:layout_marginBottom="10dp"
			android:text="Detail Penerimaan Barang"
			android:textStyle="bold"/>

		<TableLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TableRow>

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="0.3"
					android:text="No"
					android:textStyle="bold" />

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Barang"
					android:textStyle="bold" />

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="0.5"
					android:text="Kemasan"
					android:textStyle="bold" />

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="0.4"
					android:text="Jumlah"
					android:textStyle="bold" />
			</TableRow>
		</TableLayout>

		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/rvItemVoadipResult"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

		</androidx.recyclerview.widget.RecyclerView>

	</LinearLayout>

	<ImageView
		android:id="@+id/ivSignResult"
		android:layout_width="180dp"
		android:layout_height="130dp"
		android:visibility="gone" />

	<Button
		android:id="@+id/btnDoneResult"
		android:layout_width="100dp"
		android:layout_height="wrap_content"
		android:layout_gravity="end"
		android:text="Next"
		android:drawableEnd="@drawable/ic_arrow_right_voadip"/>

</LinearLayout>