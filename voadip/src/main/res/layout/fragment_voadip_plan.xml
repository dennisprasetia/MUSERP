<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="10dp"
	tools:context=".menu.plan.VoadipPlanFragment">

	<TextView
		android:id="@+id/tvLastSync"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="* Sinkronisasi terakhir"
		android:textColor="@android:color/holo_red_dark"
		android:textStyle="italic"/>

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/rvPlanVoadip"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
		tools:listitem="@layout/planning_voadip"/>

	<Button
		android:id="@+id/btnSinkron"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="SINKRON"
		android:visibility="gone"/>

</LinearLayout>