<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".menu.plan.VoadipDetailPlanFragment">

	<TextView
		android:id="@+id/detailTanggal"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:text="DETAIL VOADIP"
		android:textSize="24sp"
		android:textStyle="bold"
		android:gravity="center"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:padding="15dp">

		<TableLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TableRow>
				<TextView
					android:text="Mitra"
					android:textSize="18sp"
					android:layout_weight="0.2"/>
				<TextView
					android:id="@+id/detailMitra"
					android:text="Mitra"
					android:textSize="18sp"
					android:layout_weight="0.8"/>
			</TableRow>
			<TableRow>
				<TextView
					android:text="No OP"
					android:textSize="18sp"
					android:layout_weight="0.2"/>
				<TextView
					android:id="@+id/detailNoOp"
					android:text="No OP"
					android:textSize="20sp"
					android:layout_weight="0.8"/>
			</TableRow>
			<TableRow>
				<TextView
					android:text="Noreg"
					android:textSize="18sp"
					android:layout_weight="0.2"/>
				<TextView
					android:id="@+id/detailNoreg"
					android:text="Noreg"
					android:textSize="20sp"
					android:layout_weight="0.8"/>
			</TableRow>
			<TableRow>
				<TextView
					android:text="Alamat"
					android:textSize="18sp"
					android:layout_weight="0.2"/>
				<TextView
					android:id="@+id/detailAlamat"
					android:text="Alamat"
					android:textSize="18sp"
					android:layout_weight="0.8"/>
			</TableRow>
			<TableRow>
				<TextView
					android:text="Populasi"
					android:textSize="18sp"
					android:layout_weight="0.2"/>
				<TextView
					android:id="@+id/detailPopulasi"
					android:text="Populasi"
					android:textSize="18sp"
					android:layout_weight="0.8"/>
			</TableRow>
			<TableRow>
				<TextView
					android:text="Supplier"
					android:textSize="18sp"
					android:layout_weight="0.2"/>
				<TextView
					android:id="@+id/detailSupplier"
					android:text="Supplier"
					android:textSize="18sp"
					android:layout_weight="0.8"/>
			</TableRow>
		</TableLayout>

		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/rvDetailVoadip"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginTop="15dp"
			app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

	</LinearLayout>

</LinearLayout>