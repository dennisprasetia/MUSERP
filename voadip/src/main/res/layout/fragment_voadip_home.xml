<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:gravity="center"
	tools:context=".menu.VoadipHomeFragment">

	<Button
		android:id="@+id/btnUpload"
		android:layout_width="50dp"
		android:layout_height="wrap_content"
		android:layout_marginBottom="15dp"
		android:text="*"
		android:textSize="18sp"/>

	<androidx.cardview.widget.CardView
		android:id="@+id/cvPlanVoadip"
		android:layout_width="220dp"
		android:layout_height="220dp"
		android:layout_gravity="center"
		android:layout_marginBottom="40dp"
		app:cardCornerRadius="20dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:gravity="center"
			android:padding="15dp">

			<ImageView
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:contentDescription="@string/image_icon"
				android:src="@drawable/ic_kitchen_voadip" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:text="@string/rencana_voadip"
				android:textSize="24sp"
				android:textStyle="bold" />

		</LinearLayout>
	</androidx.cardview.widget.CardView>

	<androidx.cardview.widget.CardView
		android:id="@+id/cvEntryVoadip"
		android:layout_width="220dp"
		android:layout_height="220dp"
		android:layout_gravity="center"
		app:cardCornerRadius="20dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:gravity="center"
			android:padding="15dp">

			<ImageView
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:contentDescription="@string/image_icon"
				android:src="@drawable/ic_entry_voadip" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:text="@string/catatan_voadip"
				android:textSize="24sp"
				android:textStyle="bold" />
		</LinearLayout>
	</androidx.cardview.widget.CardView>

</LinearLayout>