<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".feature.CameraResultFragment">

	<ImageView
		android:id="@+id/ivResultVoadip"
		android:layout_width="match_parent"
		android:layout_height="425dp"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"
		android:layout_alignParentEnd="true"
		android:layout_marginStart="0dp"
		android:layout_marginTop="0dp"
		android:layout_marginEnd="0dp" />

	<Button
		android:id="@+id/btnRetakeVoadip"
		android:layout_width="120dp"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_marginStart="30dp"
		android:layout_marginBottom="30dp"
		android:drawableEnd="@drawable/ic_camera_voadip"
		android:text="Retake" />

	<Button
		android:id="@+id/btnNextToFormVoadip"
		android:layout_width="120dp"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_alignParentBottom="true"
		android:layout_marginEnd="30dp"
		android:layout_marginBottom="30dp"
		android:drawableEnd="@drawable/ic_arrow_right_voadip"
		android:text="Next" />

</RelativeLayout>