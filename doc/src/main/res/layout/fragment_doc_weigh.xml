<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	tools:context=".menu.work.DocWeighFragment">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center"
		android:padding="10dp">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Berat Timbang :"
			android:textSize="20sp"
			android:textStyle="bold"/>

		<EditText
			android:id="@+id/etBerat"
			android:layout_width="80dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="5dp"
			android:layout_marginEnd="5dp"
			android:clickable="false"
			android:cursorVisible="false"
			android:contextClickable="false"
			android:focusable="false"
			android:inputType="number|numberDecimal"
			android:gravity="center_horizontal"
			android:textAlignment="center"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Kg"
			android:textSize="20sp"
			android:textStyle="bold"
			android:gravity="center"/>

	</LinearLayout>

	<androidx.cardview.widget.CardView
		android:id="@+id/cvHasilTimbang"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="20dp"
		app:cardCornerRadius="10dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="10dp">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="5dp"
				android:text="Hasil Timbang"
				android:textSize="20sp"
				android:textStyle="bold" />

			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="#a7a5a5" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:gravity="center"
				android:orientation="horizontal"
				android:padding="10dp">

				<TextView
					android:id="@+id/tvTimbang1"
					android:layout_width="100dp"
					android:layout_height="100dp"
					android:layout_marginStart="5dp"
					android:layout_marginEnd="5dp"
					android:drawableTop="@drawable/ic_timbang_1"
					android:gravity="center_horizontal"
					android:textAlignment="center"
					android:textSize="22sp" />

				<TextView
					android:id="@+id/tvTimbang2"
					android:layout_width="100dp"
					android:layout_height="100dp"
					android:layout_marginStart="5dp"
					android:layout_marginEnd="5dp"
					android:drawableTop="@drawable/ic_timbang_2"
					android:gravity="center_horizontal"
					android:textAlignment="center"
					android:textSize="22sp" />

				<TextView
					android:id="@+id/tvTimbang3"
					android:layout_width="100dp"
					android:layout_height="100dp"
					android:layout_marginStart="5dp"
					android:layout_marginEnd="5dp"
					android:drawableTop="@drawable/ic_timbang_3"
					android:gravity="center_horizontal"
					android:textAlignment="center"
					android:textSize="22sp" />

			</LinearLayout>

		</LinearLayout>

	</androidx.cardview.widget.CardView>

	<androidx.cardview.widget.CardView
		android:id="@+id/cvHasilHitung"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="20dp"
		android:layout_marginEnd="20dp"
		android:visibility="gone"
		app:cardCornerRadius="10dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="10dp">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="5dp"
				android:text="Hasil Perhitungan"
				android:textSize="20sp"
				android:textStyle="bold" />

			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="#a7a5a5" />

			<TableLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<TableRow>

					<TextView
						android:layout_weight="1"
						android:text="Jumlah Box Timbang ke 1"
						android:textSize="16sp" />

					<EditText
						android:id="@+id/etBoxTimbang1"
						android:layout_weight="0.5"
						android:clickable="false"
						android:cursorVisible="false"
						android:gravity="center_horizontal"
						android:inputType="number"
						android:text="5" />
				</TableRow>

				<TableRow>

					<TextView
						android:layout_weight="1"
						android:text="Jumlah Box Timbang ke 2"
						android:textSize="16sp" />

					<EditText
						android:id="@+id/etBoxTimbang2"
						android:layout_weight="0.5"
						android:clickable="false"
						android:cursorVisible="false"
						android:gravity="center_horizontal"
						android:inputType="number"
						android:text="5" />
				</TableRow>

				<TableRow>

					<TextView
						android:layout_weight="1"
						android:text="Jumlah Box Timbang ke 3"
						android:textSize="16sp" />

					<EditText
						android:id="@+id/etBoxTimbang3"
						android:layout_weight="0.5"
						android:clickable="false"
						android:cursorVisible="false"
						android:gravity="center_horizontal"
						android:inputType="number"
						android:text="10" />
				</TableRow>

				<TableRow>

					<TextView
						android:layout_weight="1"
						android:text="BB Rata-rata Doc"
						android:textSize="16sp" />

					<TextView
						android:id="@+id/tvBbDoc"
						android:layout_height="40dp"
						android:layout_weight="0.5"
						android:gravity="center"
						android:textSize="18sp" />
				</TableRow>

				<TableRow>

					<TextView
						android:layout_weight="1"
						android:text="Berat Rata Tara Box"
						android:textSize="16sp" />

					<TextView
						android:id="@+id/tvBbTara"
						android:layout_height="40dp"
						android:layout_weight="0.5"
						android:gravity="center"
						android:textSize="18sp" />
				</TableRow>
			</TableLayout>

		</LinearLayout>

	</androidx.cardview.widget.CardView>

	<TextView
		android:id="@+id/tvSelesaiTimbang"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:gravity="center"
		android:paddingStart="20dp"
		android:paddingTop="10dp"
		android:paddingEnd="20dp"
		android:paddingBottom="10dp"
		android:text="Penimbangan telah selesai, halaman akan dialihkan ke proses berikutnya setelah 5 detik."
		android:visibility="gone" />

</LinearLayout>