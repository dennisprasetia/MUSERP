<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:padding="10dp">

	<TextView
		android:id="@+id/tvSupplier"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@android:color/holo_green_light"
		android:drawableEnd="@drawable/ic_arrow_down_doc"
		android:padding="5dp"
		android:text="PT Wonokoyo Corporindo" />

	<LinearLayout
		android:id="@+id/llChildDetailVoadip"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="10dp"
		android:visibility="gone">

		<TableLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TableRow>

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Mitra" />

				<TextView
					android:id="@+id/tvMitraVoadip"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1" />
			</TableRow>

			<TableRow>

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="No Reg" />

				<TextView
					android:id="@+id/tvNoregVoadip"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1" />
			</TableRow>

			<TableRow>

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Alamat" />

				<TextView
					android:id="@+id/tvAlamatVoadip"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1" />
			</TableRow>

			<TableRow>

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="No OP" />

				<TextView
					android:id="@+id/tvOpVoadip"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1" />
			</TableRow>

			<TableRow>

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Supplier" />

				<TextView
					android:id="@+id/tvSupplierVoadip"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1" />
			</TableRow>

			<TableRow>

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Tgl Kirim" />

				<TextView
					android:id="@+id/tvTglKirim"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1" />
			</TableRow>
		</TableLayout>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="20dp"
			android:layout_marginBottom="10dp"
			android:text="Detail Penerimaan Barang"
			android:textStyle="bold"/>

		<TableLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TableRow>

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="0.3"
					android:text="No"
					android:textStyle="bold" />

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Barang"
					android:textStyle="bold" />

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="0.5"
					android:text="Kemasan"
					android:textStyle="bold" />

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="0.4"
					android:text="Jumlah"
					android:textStyle="bold" />
			</TableRow>
		</TableLayout>

		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/rvDetailVoadip"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

		</androidx.recyclerview.widget.RecyclerView>

	</LinearLayout>

</LinearLayout>