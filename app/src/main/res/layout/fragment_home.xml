<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".menu.HomeFragment">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_alignParentStart="true"
		android:layout_marginStart="4dp"
		android:layout_marginTop="4dp"
		android:text="V 1.1"/>

	<TextView
		android:id="@+id/tvSlmtDtng"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"
		android:layout_alignParentEnd="true"
		android:layout_marginStart="0dp"
		android:layout_marginTop="15dp"
		android:layout_marginEnd="0dp"
		android:gravity="center"
		android:text="Selamat Datang"
		android:textSize="17sp" />

	<TextView
		android:id="@+id/tvNamaUser"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/tvSlmtDtng"
		android:layout_alignParentStart="true"
		android:layout_alignParentEnd="true"
		android:layout_marginStart="0dp"
		android:layout_marginTop="0dp"
		android:layout_marginEnd="0dp"
		android:gravity="center"
		android:text="Mas Ganteng"
		android:textSize="22sp"
		android:textStyle="bold"
		android:fontFamily="sans-serif-condensed"/>

	<androidx.gridlayout.widget.GridLayout
		android:id="@+id/glHome"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/tvNamaUser"
		android:layout_alignParentStart="true"
		android:layout_alignParentEnd="true"
		android:layout_marginStart="0dp"
		android:layout_marginTop="15dp"
		android:layout_marginEnd="0dp"
		android:padding="10dp"
		app:columnCount="3">

		<androidx.cardview.widget.CardView
			android:id="@+id/cvDocin"
			android:layout_margin="10dp"
			app:cardCornerRadius="20dp"
			app:cardElevation="5dp"
			app:layout_column="0"
			app:layout_columnWeight="1"
			app:layout_row="0">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="110dp"
				android:gravity="center"
				android:orientation="vertical">

				<ImageView
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:src="@drawable/ic_chicken" />

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:text="DOC"
					android:textSize="18sp"
					android:fontFamily="sans-serif-condensed" />
			</LinearLayout>
		</androidx.cardview.widget.CardView>

		<androidx.cardview.widget.CardView
			android:id="@+id/cvVoadip"
			android:layout_margin="10dp"
			app:cardCornerRadius="20dp"
			app:cardElevation="5dp"
			app:layout_column="1"
			app:layout_columnWeight="1"
			app:layout_row="0"
			android:visibility="gone">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="110dp"
				android:gravity="center"
				android:orientation="vertical">

				<ImageView
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:src="@drawable/ic_pills" />

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:text="VOADIP"
					android:textSize="18sp"
					android:fontFamily="sans-serif-condensed" />
			</LinearLayout>
		</androidx.cardview.widget.CardView>

		<androidx.cardview.widget.CardView
			android:id="@+id/cvRhk"
			android:layout_margin="10dp"
			app:cardCornerRadius="20dp"
			app:cardElevation="5dp"
			app:layout_column="2"
			app:layout_columnWeight="1"
			app:layout_row="0"
			android:visibility="gone">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="110dp"
				android:gravity="center"
				android:orientation="vertical">

				<ImageView
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:layout_gravity="center"
					android:src="@drawable/ic_assignment_yellow" />

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:text="RHK"
					android:textSize="18sp"
					android:fontFamily="sans-serif-condensed" />
			</LinearLayout>
		</androidx.cardview.widget.CardView>

		<androidx.cardview.widget.CardView
			android:id="@+id/cvPakan"
			android:layout_margin="10dp"
			app:cardCornerRadius="20dp"
			app:cardElevation="5dp"
			app:layout_column="1"
			app:layout_columnWeight="1"
			app:layout_row="0">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="110dp"
				android:gravity="center"
				android:orientation="vertical">

				<ImageView
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:src="@drawable/ic_corn" />

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:text="PAKAN"
					android:textSize="18sp"
					android:fontFamily="sans-serif-condensed" />
			</LinearLayout>
		</androidx.cardview.widget.CardView>

		<androidx.cardview.widget.CardView
			android:id="@+id/cvPanen"
			android:layout_margin="10dp"
			app:cardCornerRadius="20dp"
			app:cardElevation="5dp"
			app:layout_column="2"
			app:layout_columnWeight="1"
			app:layout_row="0">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="110dp"
				android:gravity="center"
				android:orientation="vertical">

				<ImageView
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:src="@drawable/ic_hen" />

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:text="PANEN"
					android:textSize="18sp"
					android:fontFamily="sans-serif-condensed" />
			</LinearLayout>
		</androidx.cardview.widget.CardView>

		<androidx.cardview.widget.CardView
			android:id="@+id/cvMitra"
			android:layout_margin="10dp"
			app:cardCornerRadius="20dp"
			app:cardElevation="5dp"
			app:layout_column="2"
			app:layout_columnWeight="1"
			app:layout_row="1"
			android:visibility="gone">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="110dp"
				android:gravity="center"
				android:orientation="vertical">

				<ImageView
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:src="@drawable/ic_assignment_person" />

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:text="MITRA"
					android:textSize="18sp"
					android:fontFamily="sans-serif-condensed" />
			</LinearLayout>
		</androidx.cardview.widget.CardView>

		<androidx.cardview.widget.CardView
			android:id="@+id/cvTestTimbangan"
			android:layout_margin="10dp"
			app:cardCornerRadius="20dp"
			app:cardElevation="5dp"
			app:layout_column="0"
			app:layout_columnWeight="1"
			app:layout_row="1">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="110dp"
				android:gravity="center"
				android:orientation="vertical">

				<ImageView
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:src="@drawable/ic_build" />

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:text="TEST TIMBANGAN"
					android:textSize="18sp"
					android:fontFamily="sans-serif-condensed" />
			</LinearLayout>
		</androidx.cardview.widget.CardView>

	</androidx.gridlayout.widget.GridLayout>
</RelativeLayout>