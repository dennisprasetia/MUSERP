<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".menu.TestTimbanganFragment">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="90dp"
		android:gravity="center"
		android:text="TEST TIMBANGAN"
		android:textSize="36sp"
		android:textStyle="bold"
		android:textColor="#fff"
		android:background="#a12a"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="15dp">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="IP ADDRESS : "
			android:textSize="24sp"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="192.168.100.10"
			android:textSize="24sp"
			android:textStyle="bold"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="HASIL TEST TIMBANGAN :"
			android:textSize="24sp"
			android:layout_marginTop="15dp"/>

		<TextView
			android:id="@+id/tvHasilTest"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="24sp"
			android:textStyle="bold"/>

		<Button
			android:id="@+id/btnResetTest"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="RESET TEST"
			android:textSize="20sp"
			android:layout_marginTop="10dp"/>

	</LinearLayout>

</LinearLayout>